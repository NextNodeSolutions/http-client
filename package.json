{
	"name": "@nextnode/http-client",
	"version": "1.0.0",
	"description": "A TypeScript HTTP client library with normalized fetch operations, automatic retry logic, intelligent caching, and comprehensive error handling for NextNode projects",
	"keywords": [
		"api",
		"cache",
		"client",
		"fetch",
		"http-client",
		"nextnode",
		"rest",
		"retry",
		"typescript"
	],
	"license": "MIT",
	"author": "NextNodeSolutions",
	"files": [
		"CHANGELOG.md",
		"README.md",
		"dist/**/*.d.ts",
		"dist/**/*.js"
	],
	"main": "./dist/index.js",
	"scripts": {
		"prebuild": "pnpm clean",
		"build": "tsup",
		"changeset": "changeset",
		"changeset:publish": "changeset publish",
		"changeset:version": "changeset version",
		"clean": "rm -rf dist",
		"commitlint": "commitlint --edit",
		"format": "prettier --write .",
		"lint": "biome check --write --no-errors-on-unmatched",
		"lint-staged": "lint-staged",
		"prepare": "husky",
		"prepublishOnly": "pnpm build",
		"size": "du -sh dist/ && find dist -name '*.js' -exec wc -c {} + | tail -1",
		"test": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@nextnode/logger": "^0.3.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.4",
		"@commitlint/cli": "^19",
		"@nextnode/standards": "^2.2.0",
		"@types/node": "^22",
		"@vitest/coverage-v8": "^3",
		"better-sort-package-json": "^1",
		"husky": "^9",
		"lint-staged": "^16",
		"prettier": "^3",
		"tsup": "^8.5.1",
		"typescript": "^5",
		"vitest": "^3"
	},
	"peerDependencies": {
		"@nextnode/validation": "^2.0.0"
	},
	"peerDependenciesMeta": {
		"@nextnode/validation": {
			"optional": true
		}
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"packageManager": "pnpm@10.11.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./validation": {
			"types": "./dist/validation.d.ts",
			"import": "./dist/validation.js"
		}
	},
	"module": "./dist/index.js",
	"pnpm": {
		"overrides": {
			"brace-expansion@>=2.0.0 <=2.0.1": ">=2.0.2",
			"glob@>=10.2.0 <10.5.0": ">=10.5.0",
			"js-yaml@<3.14.2": ">=3.14.2"
		}
	},
	"prettier": "@nextnode/standards/prettier/core",
	"sideEffects": false,
	"types": "./dist/index.d.ts"
}
